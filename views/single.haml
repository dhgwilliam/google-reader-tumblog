  %head
    %title= @title
  %body
    .clear
    #content.container-12
      #header.grid-8.prefix-2
        %a{:href => "/"} home
        \-
        %a{:href => "/popular"} popular
        \-
        %a{:href => "/#{@id}"} permalink
        \-
        %a{:href => "/random"} random
        \-
        %a{:href => "/like/#{@id}"} like
      #body.grid-8.prefix-2
